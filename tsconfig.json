{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "outDir": "publish",
    "baseUrl": ".",
    // Using sinueux/* to src/ results in a circular import
    "paths": {
      "sinueux/h": [
        "src/h"
      ],
      "sinueux/s": [
        "src/s"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "publish"
  ]
}
