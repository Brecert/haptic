{
  "name": "sinueux",
  "version": "0.0.0",
  "description": "TSX sibling of Sinuous with less twist",
  "keywords": [],
  "type": "module",
  "main": "src/index.ts",
  "license": "MIT",
  "author": "Gen Hames",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/nthm/sinueux"
  },
  "scripts": {
    "build": "npm run build:h && npm run build:s && npm run build:index:esm && npm run build:index:min",
    "build:h": "esbuild --bundle src/h/index.ts --outfile=publish/h/index.js --format=esm --minify --sourcemap",
    "build:s": "esbuild --bundle src/s/index.ts --outfile=publish/s/index.js --format=esm --minify --sourcemap",
    "build:index:esm": "esbuild src/index.ts --outfile=publish/index.js --format=esm --minify --sourcemap",
    "build:index:min": "esbuild src/index.ts --bundle --outfile=publish/index.min.js --format=iife --minify --sourcemap"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "esbuild": "^0.7.8",
    "eslint": "^7.10.0",
    "typescript": "^4.0.3"
  }
}
