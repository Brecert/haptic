{
  "name": "haptic",
  "version": "0.8.0",
  "description": "Straightforward reactive web rendering in TSX",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.d.ts",
  "license": "MIT",
  "author": "Gen Hames",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/nthm/haptic"
  },
  "scripts": {
    "build": "npm run build:h && npm run build:s && npm run build:v && npm run build:index",
    "build:h": "esbuild --bundle src/h/index.ts --outfile=publish/h/index.js --format=esm --minify --sourcemap",
    "build:s": "esbuild --bundle src/s/index.ts --outfile=publish/s/index.js --format=esm --minify --sourcemap",
    "build:v": "esbuild --bundle src/v/index.ts --outfile=publish/v/index.js --format=esm --minify --sourcemap",
    "build:index": "esbuild --bundle src/index.ts --external:'./v' --external:'./h' --outfile=publish/index.js --format=esm --minify --sourcemap",
    "size": "echo $(esbuild src/index.ts --bundle --format=esm --minify | gzip -9 | wc -c) min+gzip bytes",
    "test-sinuous": "esbuild src/s/index.ts --outfile=../sinuous/packages/sinuous/observable/src/observable.js --format=esm"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "esbuild": "^0.7.8",
    "eslint": "^7.10.0",
    "typescript": "^4.0.3"
  }
}
