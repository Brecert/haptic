{
  "name": "sinueux",
  "version": "0.0.0",
  "description": "TSX sibling of Sinuous with less twist",
  "keywords": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/nthm/sinueux"
  },
  "author": "Gen Hames",
  "scripts": {
    "build": "npm run build:h && npm run build:s && npm run build:index",
    "build:h": "esbuild --bundle src/h/index.ts --outfile=publish/h/index.js --format=esm --minify --sourcemap",
    "build:s": "esbuild --bundle src/s/index.ts --outfile=publish/s/index.js --format=esm --minify --sourcemap",
    "build:index": "esbuild --bundle src/index.ts --outfile=publish/index.js --format=esm --minify --sourcemap",
    "build:index-external-sed": "esbuild --bundle src/index.ts --outfile=publish/index.js --format=esm --minify --sourcemap --external:./s && sed -i 's|\\./s|sinueux/s|' publish/index.js",
    "build:index-external-tsc": "esbuild --bundle src/index.ts --outfile=publish/index.js --format=esm --minify --sourcemap --external:sinueux/s",
    "dts": "tsc"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "esbuild": "^0.7.8",
    "eslint": "^7.10.0",
    "typescript": "^4.0.3"
  }
}
